SELECT 	device_pk,
		measure_timestamp,
		measure,
		AVG ( measure ) *1.20 AS measure_threshold,
		measure_unit,
		" Power consumption 20% > last 24 hours " AS measure_description,
		device_location
FROM Q13_Smoothing.win:ext_timed ( measure_timestamp_long, 24 hours )
GROUP BY device_pk
HAVING measure >= AVG ( measure ) *1.20 /* Threshold */